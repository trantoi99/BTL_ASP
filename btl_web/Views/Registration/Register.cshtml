@model Framework.EF.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link rel="stylesheet" href="~/Content/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/assets/font-awesome/4.5.0/css/font-awesome.min.css" />

    <!-- text fonts -->
    <link rel="stylesheet" href="~/Content/assets/css/fonts.googleapis.com.css" />

    <!-- ace styles -->
    <link rel="stylesheet" href="~/Content/assets/css/ace.min.css" />

    <!--[if lte IE 9]>
        <link rel="stylesheet" href="~/Content/assets/css/ace-part2.min.css" />
    <![endif]-->
    <link rel="stylesheet" href="~/Content/assets/css/ace-rtl.min.css" />
</head>
<body>
    @using (Html.BeginForm("Register", "Registration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div id="signup-box" class="signup-box widget-box no-border">
                <div class="widget-body" style="width:500px;height:550px;margin-left:35%">
                    <div class="widget-main">
                        <h4 class="header green lighter bigger">
                            <i class="ace-icon fa fa-users blue"></i>
                            Đăng ký tài khoản mới
                        </h4>

                        <div class="space-6"></div>
                        <p>
                            Nhập thông tin của bạn để bắt đầu:
                        </p>

                        <form>
                            <fieldset>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <label class="block clearfix">
                                    <span class="block input-icon input-icon-right">
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-iput", @placeholder = "Tài Khoản" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                        <i class="ace-icon fa fa-user"></i>

                                    </span>
                                </label>

                                <label class="block clearfix">
                                    <span class="block input-icon input-icon-right">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-iput", @placeholder = "Mật Khẩu" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        <i class="ace-icon fa fa-lock"></i>
                                    </span>
                                </label>

                                <label class="block clearfix">
                                    <span class="block input-icon input-icon-right">
                                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-iput", @placeholder = "Nhập lại mật khẩu" } })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                        <i class="ace-icon fa fa-lock"></i>
                                    </span>
                                </label>


                                <label class="block clearfix">
                                    <span class="block input-icon input-icon-right">
                                        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-iput", @placeholder = "Họ Tên" } })
                                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })

                                    </span>
                                </label>

                                <label class="block clearfix">
                                    <span class="block input-icon input-icon-right">
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-iput", @placeholder = "Địa chỉ" } })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                    </span>
                                </label>

                                <label class="block clearfix">
                                    <span class="block input-icon input-icon-right">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-iput", @placeholder = "Email" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        <i class="ace-icon fa fa-envelope"></i>
                                    </span>
                                </label>


                                <label class="block">

                                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = " check-box" } })
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })

                                    <span class="lbl">

                                        I accept the
                                        <a href="#">User Agreement</a>
                                    </span>
                                </label>

                                <label class="block clearfix">
                                    <span class="block input-icon input-icon-right">
                                        Nếu có tài khoản? <a href="@Url.Action("Index", "Login")">Đăng nhập tại đây!</a>
                                    </span>
                                </label>

                                <div class="space-24"></div>

                                <div class="clearfix">
                                    <button type="reset" class="width-40 pull-left btn btn-danger">
                                        <i class="ace-icon fa fa-refresh"></i>
                                        <span class="bigger-110">Đặt lại</span>
                                    </button>

                                    <button type="submit" value="Register" class="width-40 pull-left btn btn-success">
                                        <span class="bigger-110">Đăng ký</span>

                                        <i class="ace-icon fa fa-arrow-right icon-on-right"></i>
                                    </button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    }
</body>
</html>
